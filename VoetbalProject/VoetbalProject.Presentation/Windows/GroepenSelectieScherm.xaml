<Window x:Class="VoetbalProject.Presentation.Windows.GroepenSelectieScherm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoetbalProject.Presentation.Windows"
        mc:Ignorable="d"
        Title="GroepenSelectieScherm" Height="700" Width="350" MinHeight="700"  MinWidth="350" Background="Beige">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Content="Selecteer Groep" BorderBrush="LimeGreen" FontSize="40" HorizontalAlignment="Center" FontWeight="Bold" BorderThickness="10"/>
        <!-- ListBox Groepen -->
        <ListBox Margin="0, 10" Name="ListGroepen" Grid.Row="2" MouseDoubleClick="ListGroepen_MouseDoubleClick" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="LimeGreen" BorderThickness="10"></ListBox>
    </Grid>
</Window>
